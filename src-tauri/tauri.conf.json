{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "kvatum",
  "version": "0.2.0",
  "identifier": "com.kvatum.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "trayIcon": {
      "title": "kvatum",
      "tooltip": "kvatum",
      "iconPath": "icons/icon.png"
    },
    "windows": [
      {
        "title": "kvatum",
        "minHeight": 660,
        "minWidth": 1024,
        "width": 1024,
        "height": 660
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "copyright": "Copyright Â© 2025 Kvatum",
    "publisher": "Kvatum",
    "shortDescription": "Kvatum - a very powerful collaboration tool",
    "longDescription": "Kvatum is a very powerful collaboration tool",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
